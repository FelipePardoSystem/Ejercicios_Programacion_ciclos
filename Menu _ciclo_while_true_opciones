import os

print("\n---------Menú-----------")

opcion=""
while True:
    opcion=str(input('''
    -------Menú-------
    1.-SUMAR
    2.-MULTIPLICAR
    3.-SALIR
    
    Que desea hacer: '''))
    
    if opcion== "1":
        numero_1=int(input("Ingrese el primer numero con el que desea ingresar al menú: "))
        numero_2=int(input("Ingrese el segundo numero con el que desea ingresar al menú: "))
        resultado= numero_1 + numero_2
        print(f"El resultado de esta suma es {resultado}")
    if opcion== "2":
        numero_1=int(input("Ingrese el primer numero con el que desea ingresar al menú: "))
        numero_2=int(input("Ingrese el segundo numero con el que desea ingresar al menú: "))
        resultado=numero_1 * numero_2
        print(f"El resultado de su multiplicacion es : {resultado}")
    if opcion== "3":
        resp=str(input("¿Desea salir? S/N")).upper()
        if resp=="S":
            break
